<div class="container" style="margin-top:120px">
    <form action="/productos" method="POST">
  <div>
    <label for="inputName" >Name</label>
    <div>
      <input type="text" id="inputName" name="title" placeholder="Name of the product">
    </div>
  </div>
  <div>
    <label for="inputPass">Price</label>
    <div>
      <input type="number" id="inputPass" name="price" placeholder="Price of the product">
    </div>
  </div>
  <div>
    <label for="inputThumb">Thumbnail</label>
    <div>
      <input type="text" id="inputThumb" name="thumbnail" placeholder="URL of the product">
    </div>
  </div>

  
  <div>
    <div
      <button type="submit">Send</button>
    </div>
  </div>
</form>
</div>